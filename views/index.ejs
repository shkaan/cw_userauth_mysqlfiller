<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
    <title><%= title %></title>
    <!--jQuery script-->
    <script src="scripts/main.js"></script>

</head>

<body>

<div class="container-fluid">
    <% include partials/topheader.ejs %>

    <div class="content-wraper col-md-10">
        <div class="row">
            <div class="main-form">
                <form method="post" action="/mainPost">
                    <div class="col-xs-10 col-md-5">
                        <input type="text" name="question" class="form-control" placeholder="Question"
                               required autofocus="autofocus">
                    </div>

                    <div class="col-xs-10 col-md-5">
                        <input type="text" name="answer" class="form-control " placeholder="Answer" required>
                    </div>

                    <div class="col-xs-5 col-md-1">
                        <input type="submit" class="btn btn-primary" value="Save to DB">
                    </div>
                    <% if (user.access_level === 'admin'){ %>
                    <div class="col-xs-5 col-md-1">
                        <a href="/adminView" class="admbtn <%= 'btn btn-danger' %>"><%= 'Admin mode' %></a>

                    </div>
                    <% } %>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="msg-container col-md-12">
                <div class="text-left col-md-5 col-md-offset-5">
                    <p id="messages">
                        <% if (errorMessage) { %>
                        <span id="error"><%= errorMessage %></span>
                        <% }else{ %>
                        <span id="info"><%= infoMessage %></span>
                        <% } %>
                    </p>

                    <div>
                        <span id="ajaxsuccess"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-container">
            <div class="col-md-10">
                <div class="row">
                    <ul class="nav nav-pills mytab">
                        <li role="presentation"><a href="#recent" data-toggle="pill">Recent</a></li>
                        <li role="presentation"><a href="#alltime" data-toggle="pill">All time</a></li>
                    </ul>
                </div>

                <div class="row">
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane" id="recent">
                            <h3>Your recent entries:</h3>

                            <div class="table-scroll">
                                <table class="table table-responsive sortable">
                                    <thead class="thead-color">
                                    <tr>
                                        <th class="hide" data-defaultsort="disabled"></th>
                                        <th class="col-md-1">#</th>
                                        <th class="col-md-5 az">Question</th>
                                        <th class="col-md-4 az">Answer</th>
                                        <th class="col-md-1" data-defaultsort="disabled"></th>
                                        <th class="col-md-1" data-defaultsort="disabled"></th>
                                    </tr>
                                    </thead>

                                    <tbody id="table-body-recent">
                                    <% if (query) { %>
                                    <% for(var i = 0, len = query.length;i < len;i++){ %>
                                    <% if(query[i].sessionid === sess){ %>
                                    <tr class="blink">
                                        <td class="keyid hide"><%= query[i].entryid %></td>
                                        <td class="reverserec"><%= i + 1 %></td>
                                        <td><%= query[i].question %></td>
                                        <td><%= query[i].answer %></td>
                                        <td>
                                            <button class="btn btn-default btn-xs editbtn"><span
                                                        class="glyphicon glyphicon-pencil"></span> edit
                                            </button>
                                        </td>
                                        <td>
                                            <button class="btn btn-default btn-xs deletebtn"><span
                                                        class="glyphicon glyphicon-remove"></span> delete
                                            </button>
                                        </td>
                                    </tr>
                                    <% }}} %>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane" id="alltime">
                            <h3>All entries by you:</h3>

                            <div class="table-scroll">
                                <table class="table table-responsive sortable">
                                    <thead class="thead-color">
                                    <tr>
                                        <th class="hide" data-defaultsort="disabled"></th>
                                        <th class="col-md-1">#</th>
                                        <th class="col-md-5 az">Question</th>
                                        <th class="col-md-4 az">Answer</th>
                                        <th class="col-md-1" data-defaultsort="disabled"></th>
                                        <th class="col-md-1" data-defaultsort="disabled"></th>
                                    </tr>
                                    </thead>

                                    <tbody id="table-body-all">
                                    <% if (query) { %>
                                    <% for(var i = 0, len = query.length;i < len;i++){ %>
                                    <tr class="blink">
                                        <td class="keyid hide"><%= query[i].entryid %></td>
                                        <td class="reverse"><%= len - i %></td>
                                        <td><%= query[i].question %></td>
                                        <td><%= query[i].answer %></td>
                                        <td>
                                            <button class="btn btn-default btn-xs editbtn"><span
                                                        class="glyphicon glyphicon-pencil"></span> edit
                                            </button>
                                        </td>
                                        <td>
                                            <button class="btn btn-default btn-xs deletebtn"><span
                                                        class="glyphicon glyphicon-remove"></span> delete
                                            </button>
                                        </td>
                                    </tr>
                                    <% }} %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal fade deletemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="delete-modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Delete row?</h4>
            </div>
            <div class="modal-body">
                Click delete to permanently delete row, anywhere else to cancel
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger btn-ok" id="delete-confirmed">Delete</button>
            </div>
        </div>
    </div>
</div>

</body>
</html>


