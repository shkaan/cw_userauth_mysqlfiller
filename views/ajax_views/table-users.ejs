<div class="row">
    <div class="col-md-12">
        <div class="row table-scroll col-md-9">
            <table class="table table-hover sortable clearfix" id="usrtable">
                <thead>
                <tr>
                    <th class="hide col-md-1" data-defaultsort="disabled"></th>
                    <th class="col-md-2">Username</th>
                    <!--<th class="col-md-6">Password</th>-->
                    <th class="col-md-2">Created at</th>
                    <th class="col-md-2">Access Level</th>
                    <th class="col-md-1" data-defaultsort="disabled"></th>
                    <th class="col-md-1" data-defaultsort="disabled"></th>
                </tr>
                </thead>
                <tbody>
                <% if (dbView){ %>
                <% for (var i = 0, len = dbView.length; i < len;i++) { %>
                <tr>
                    <td class="keyid hide" id="usrid"><%= dbView[i].userid %></td>
                    <td><%= dbView[i].username %></td>
                    <!--<td><%#= dbView[i].password %></td>-->
                    <td><%= dateParser(dbView[i].created_at) %></td>
                    <td><%= dbView[i].access_level %></td>
                    <td>
                        <button class="btn btn-default btn-xs editbtn pull-right"><span
                                    class="glyphicon glyphicon-pencil"></span> edit user details
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-default btn-xs deletebtn pull-right"><span
                                    class="glyphicon glyphicon-remove"></span> delete user
                        </button>
                    </td>
                </tr>
                <% }} %>
                </tbody>
            </table>
        </div>
        <div class="well col-md-2 statswell pull-right text-center">
            <% var totalcnt = 0 %>
            <% if (counter){ %>
            <% for (var c in counter) { %>
            <% if (counter.hasOwnProperty(c)){ %>
            <p><%= counter[c].access_level.toUpperCase() + 'S' + ' : ' %> <span
                        class="usrcnt"><%= counter[c].count %></span></p>
            <% totalcnt += counter[c].count %>
            <% }} %>
            <p><strong>TOTAL</strong> : <span id="ttlcnt"><%= totalcnt %></span></p>
            <%  } %>
        </div>

    </div>
</div>


<div class="help-block"></div>

<div class="row">
    <div class="col-md-1">
        <div data-target="#newuser" class="btn btn-primary" data-toggle="collapse">
            Add new user
        </div>
    </div>
</div>


<div class="row collapse voffset2" id="newuser">
    <!--<div class="col-md-12">-->
    <form method="post" action="/is a top secret" class="form-horizontal" id="user-submit" role="form">

        <div class="col-md-12">
            <div class="form-group col-md-2">
                <input type="text" class="form-control" id="usrfocus" name="username" autofocus
                       placeholder="Username" required autocomplete="off">
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group col-md-2">
                <input type="text" class="form-control" name="password" placeholder="Password" required
                       autocomplete="off">
            </div>
        </div>

        <div class="form-group col-md-12">
            <div class="checkbox col-md-2">
                <label><input type="checkbox" name="access_level" value="admin"> <strong>Create as
                        ADMIN</strong></label>
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-group">
                <div class="col-md-12"><input type="submit" class="btn btn-primary" value="Submit">
                    <span id="ajaxfail" class="loffset1"></span>
                    <span id="ajaxsuccess" class="loffset1"></span></div>
            </div>
        </div>
    </form>
</div>

