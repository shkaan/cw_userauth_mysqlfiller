<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
    <title><%= title %></title>
</head>

<body>

<div class="signin-container container-fluid col-md-12 col-md-offset-3 container-table">
    <div class="row vertical-center-row">

        <form method="post" action="/signin" class="form-horizontal" role="form">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-3">
                    <h2><span class="glyphicon glyphicon-user"></span> Sign In</h2>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-8 col-md-2" for="username">Username:</label>

                <div class="col-xs-8 col-md-2">
                    <input type="text" class="form-control" name="username" id="username"
                           placeholder="username" autofocus="autofocus" required/>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-xs-8 col-md-2" for="password">Password:</label>

                <div class="col-xs-8 col-md-2">
                    <input type="password" class="form-control" name="password" id="password"
                           placeholder="password" required/>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 col-md-offset-2">
                    <input type="submit" class="btn btn-primary" name="signin" id="signin" value="Sign in"/>
                    <a href="/signup" class="btn btn-default" id="register" title="register">register</a>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4 col-md-offset-2">
                    <% if(typeof(errorMessage) !== 'undefined') { %>
                    <span id="error"><%= errorMessage %></span>
                    <% } %>
                </div>
            </div>
        </form>
    </div>
</div>

</body>
</html>