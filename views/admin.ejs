<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head.ejs %>
    <title><%= title %></title>
    <!-- javascript-->
    <script src="scripts/admin.js"></script>
</head>

<body>
<div class="container-fluid">
    <% include partials/topheader.ejs %>

    <div class="row">
        <div class="col-md-12">
            <div class="buttonbar text-center">
                <ul class="nav nav-pills text-center voffset1">
                    <li role="presentation" class="usersDB"><a data-toggle="pill">Users Database View</a></li>
                    <li role="presentation" class="wordsDB"><a data-toggle="pill">Words Database View</a></li>
                    <li role="presentation" class="approvedDB"><a data-toggle="pill">Approved Words View</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="dbview" id="table-container"></div>

</div>
<div class="modal fade usreditmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="edit-modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit user details</h4>
            </div>
            <div class="modal-body">

                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="editusername">Username</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="username"
                                   id="editusername" placeholder="Username" autocomplete="off"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="editpassword">Password</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="password"
                                   id="editpassword" placeholder="Password" autocomplete="off"/>
                        </div>
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <p class="smallinfo">(leave password field empty if you don't want to change current
                            password)</p>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-md-10">
                            <div class="radio-inline admradio">
                                <label><input type="radio" name="access_level" value="admin">Admin</label>
                            </div>
                            <div class="radio-inline usrradio">
                                <label><input type="radio" name="access_level" value="user">User</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary pull-right">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade deleteusrmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="delete-modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Delete user?</h4>
            </div>
            <div class="modal-body">
                Permanently delete user <span id="modalusrname"><strong></strong></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger btn-ok" id="delete-confirmed">Delete</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade wordseditmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="edit-modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit question & answer</h4>
            </div>
            <div class="modal-body">

                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="editquestion">Question</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="question"
                                   id="editquestion" placeholder="Question" autocomplete="off"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"
                               for="editanswer">Answer</label>
                        <div class="col-md-10">
                            <input type="text" class="form-control" name="answer"
                                   id="editanswer" placeholder="Answer" autocomplete="off"/>
                        </div>
                    </div>

                    <div>
                        <p class="col-md-offset-2 col-md-10 smallinfo">Created by <span id="createdby"><strong></strong></span>
                            on <span
                                    id="createdat"></span>
                        </p>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-md-10">
                            <button type="submit" class="btn btn-primary pull-right">Save changes</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade deletewordsmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="delete-modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Delete words?</h4>
            </div>
            <div class="modal-body">
                Permanently delete <span id="modalwordsquestion"><strong></strong></span> and <span
                        id="modalwordsanswer"><strong></strong></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger btn-ok" id="words-delete-confirmed">Delete</button>
            </div>
        </div>
    </div>
</div>

</body>
</html>